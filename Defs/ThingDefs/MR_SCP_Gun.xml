<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ========== CQBAR15 ========== -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>MoManaCha_CQBAR15Rifle</defName>
    <label>CQBAR15突击步枪</label>
    <description>CQ突击步枪的卡宾枪型，其外观及设计与M4卡宾枪极为相似，虽然外形类似M4但其确实是在CQ系列上改进制作，主要运动部件枪机与枪机框无变化，适合CQB作战。</description>
    <graphicData>
      <texPath>Things/Weapons/CQBAR15</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.75</drawSize>
    </graphicData>
    <equippedAngleOffset>40</equippedAngleOffset>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>400</displayPriority>
    </recipeMaker>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <statBases>
      <WorkToMake>48000</WorkToMake>
      <Mass>3</Mass>
      <AccuracyTouch>0.88</AccuracyTouch>
      <AccuracyShort>0.72</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>1.1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>90</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_CQBAR15Rifle</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>30</range>
        <burstShotCount>5</burstShotCount>
        <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
        <soundCast>CQBAR15</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
      <li>AssaultRifle</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_CQBAR15Rifle</defName>
    <label>CQBAR15步枪弹</label>
    <graphicData>
